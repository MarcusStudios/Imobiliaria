# Firebase Configuration
# Obtenha estas credenciais no console do Firebase: Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=sua_api_key_aqui
VITE_FIREBASE_AUTH_DOMAIN=seu-projeto.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=seu-projeto
VITE_FIREBASE_STORAGE_BUCKET=seu-projeto.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=seu_sender_id
VITE_FIREBASE_APP_ID=seu_app_id
VITE_FIREBASE_MEASUREMENT_ID=seu_measurement_id

# IDs Especiais
# UID do usuário administrador (pode ser encontrado na aba Authentication do Firebase)
VITE_ADMIN_UID=uid_do_admin_aqui

# Cloudinary — Upload de Imagens
# Obtenha no console do Cloudinary: Settings > Upload > Upload presets
VITE_CLOUDINARY_CLOUD_NAME=seu_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=seu_upload_preset
